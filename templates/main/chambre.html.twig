top:0;
z-index:999;
}

header .nav{
height:45px;
overflow-y:hidden;
transition:0.5s;
}
header .nav a:not(:first-child){
display:block;
margin:15px;
}
header .nav a.active{
width:120px;
}
header .nav .icon{
display:block;
float:right;
position:absolute;
right:15px;
top:0px;
cursor:pointer;
}
.dropbtn{

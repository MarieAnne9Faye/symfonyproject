.dropdown-content a{
margin:5px;
padding:0px;
}
.dropdown-content:before {
content:"\f0d9";
font-family:"FontAwesome";
position:absolute;
left:-8px;
color:gray;
top:0px;
}

.dropdown-content a:nth-child(1){
margin:0px 10px;
padding-left:5px;
}
.dropdown-content {
position:fixed;
